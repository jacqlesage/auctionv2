# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
#
#GET     /views/assetMainPage        controllers.LoginController.loadAssetMainHTMLPage
# get the assets pages view
GET     /view/practiceAssetList     controllers.PageViewsController.practiceAssetList
GET     /login/firstLogin/:allInfoObject         controllers.LoginController.firstSignUp(allInfoObject: String)

#Test for ajax login
GET     /login/loginTable/:loginObject  controllers.LoginController.addLoginTableObject(loginObject: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#check for customer in login table
GET     /login/customer/:loginobject    controllers.LoginController.findCustomerInLoginTable(loginobject: String)
GET     /login/customer/firstSignUp/:loginObject  controllers.LoginController.assetFirstSignUpForLoginTable(loginObject: String)
GET     /login/customer/saveCustomerInDB/:customerObject controllers.LoginController.loginCustomerFirstTime(customerObject: String)
GET     /login/practice/addPracticeObject/:practiceObject   controllers.LoginController.addPracticeObject(practiceObject: String)

#logout customer
GET /login/customer                     controllers.LoginController.logout

